<?xml version="1.0" encoding="utf-8"?>


<LinearLayout android:layout_width="368dp"
    android:layout_height="495dp"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    tools:layout_editor_absoluteY="8dp"
    tools:layout_editor_absoluteX="8dp"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <ImageView
        android:id="@+id/imageView8"
        android:layout_width="400px"
        android:layout_height="wrap_content"
        android:src="@drawable/sdmobile_logo"

        android:layout_gravity="center"
        />

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.05"
        android:text="Meu Chamado"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="18sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.05"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/lbData"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.05"
            android:text="Data"
            android:textColor="#000000"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/lbStatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.05"
            android:gravity="right"
            android:text="Status"
            android:textColor="#000000"
            android:textStyle="bold" />

    </LinearLayout>


    <TextView
        android:id="@+id/lbTitulo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.05"
        android:text="Titulo"
        android:textColor="#000000"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/lbMensagem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.05"
        android:text="Mensagem"
        android:textColor="#000000"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/lbDtResposta"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.05"
        android:text="Data da Resposta"
        android:textColor="#000000"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/lbResposta"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.05"
        android:text="Resposta"
        android:textColor="#000000"
        android:textStyle="bold" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200px"
        android:orientation="vertical"></LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btCancelar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_weight="0.05"

            android:background="@drawable/screen_border"
            android:text="Cancelar"
            android:textColor="#ffffff" />

        <Button
            android:id="@+id/btVoltar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_weight="0.05"

            android:background="@drawable/screen_border"
            android:onClick="voltarLista"


            android:text="Voltar"
            android:textColor="#ffffff" />
    </LinearLayout>

</LinearLayout>

